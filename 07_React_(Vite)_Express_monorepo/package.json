{
  "name": "07_react_express_monorepo",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "^v20.18.0",
    "npm": "^10.8.2"
  },
  "workspaces": [
    "api",
    "client",
    "common"
  ],
  "private": true,
  "description": "Custom React (Vite) and Node/Express in TS monorepo config.",
  "scripts": {
    "start:client": "cd client && vite",
    "build:client": "cd client && tsc -b && vite build",
    "start:api": "cd api && NODE_ENV=development tsx watch api.ts",
    "build:api": "node build.js",
    "start": "clear && concurrently \"npm run start:client\" \"npm run start:api\""
  },
